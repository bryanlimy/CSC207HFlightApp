<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="#F8F8F8" >

    <EditText
        android:id="@+id/upload_flight_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:ems="10"
        android:hint="@string/flight_file_path"
        android:minHeight="40dp"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/flightSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_flight_field"
        android:layout_alignLeft="@+id/upload_flight_field"
        android:layout_alignRight="@+id/upload_flight_field"
        android:layout_marginBottom="42dp"
        android:minHeight="40dp"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_flight"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/upload_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upload_flight_field"
        android:layout_alignRight="@+id/upload_flight_field"
        android:layout_below="@+id/upload_flight_field"
        android:layout_marginTop="25dp"
        android:background="#2BBABD"
        android:onClick="uploadFlightsText"
        android:text="@string/upload_flight"
        android:textColor="@drawable/button_text_color"
        android:textSize="18sp" />

</RelativeLayout>